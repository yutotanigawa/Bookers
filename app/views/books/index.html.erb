<body>

  <% if flash[:notice] %>
  <div class="flash">
    <p class="notice"><%= flash[:notice] %></p>
  </div>
  <% end %>

	<h1>Books</h1>

<table >
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
      </tr>
      <% end %>

  </tbody>
</table>


<h2>New book</h2>
<!-- form_forの部分 -->
	<%= form_for(@book) do |b| %>

		<h5 class="form">Title</h5>
		<%= b.text_field :title %>
		<h5 class="form">Body</h5>
		<%= b.text_area :body %><br>
		<%= b.submit 'Create Book' %>
	<% end %>

</body>