<body>
    <h1>Editing Book</h1>

<%= form_for(@book) do |b| %>

    <h5 class="form">Title</h5>
    <%= b.text_field :title %>
    <h5 class="form">Body</h5>
    <%= b.text_area :body %><br>
    <%= b.submit 'Create Book' %>

  <% end %>
</form>

<p class ="show-foot-tag"><%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %></p>


</body>